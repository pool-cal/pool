<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/background_alarm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3e8bfe"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자린고비 알림"
            android:id="@+id/text1_day"
            android:textColor="#ffffff"
            android:textSize="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/text1_day"
        android:id="@+id/view_day" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="270dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/text2_day"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="#ffffff"
                android:textColor="#000000"
                android:text="오늘의 자린고비 목표를 설정해주세요"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_horizontal">
            <EditText
                android:id="@+id/edit_text_day"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="입력해주세요."
                android:textSize="13dp"
                android:textColor="#000000"
                android:textColorHint="#8C8C8C"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/text3_day"
                android:text="원"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/start_day"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:background="#3e8bfe"
                android:layout_marginLeft="10dp"
                android:text="확인"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:onClick="start_day"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>