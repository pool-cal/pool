<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/background"
    android:orientation="vertical" >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#ffffff"
		android:gravity="center">
		<Button
			android:id="@+id/monthPrevious"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:background="@drawable/direction_left"
			android:gravity="center_horizontal"
			android:layout_alignParentLeft="true"
			android:layout_marginLeft="10dp"
			/>
		<TextView
			android:id="@+id/monthText"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			android:text="MonthView"
			android:textSize="24dp"
			android:textStyle="bold"
			android:textColor="#5CD1E5"
			android:gravity="center"
			android:layout_centerVertical="true"
			android:layout_centerHorizontal="true" />

		<Button
			android:id="@+id/monthNext"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:background="@drawable/direction_right"
			android:gravity="center_horizontal"
			android:layout_alignParentRight="true"
			android:layout_marginRight="10dp"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="30dp"
		android:background="#ffffff">
		<TextView
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:text="월"
			android:textSize="13dp"
			android:gravity="center"
			android:textColor="#8C8C8C"
			android:layout_marginLeft="10dp"/>
		<TextView
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:text="화"
			android:textSize="13dp"
			android:gravity="center"
			android:textColor="#8C8C8C"
			android:layout_marginLeft="20dp"/>
		<TextView
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:text="수"
			android:textSize="13dp"
			android:gravity="center"
			android:textColor="#8C8C8C"
			android:layout_marginLeft="20dp"/>
		<TextView
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:text="목"
			android:textSize="13dp"
			android:gravity="center"
			android:textColor="#8C8C8C"
			android:layout_marginLeft="20dp"/>
		<TextView
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:text="금"
			android:textSize="13dp"
			android:gravity="center"
			android:textColor="#8C8C8C"
			android:layout_marginLeft="20dp"/>
		<TextView
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:text="토"
			android:textSize="13dp"
			android:gravity="center"
			android:textColor="#8C8C8C"
			android:layout_marginLeft="20dp"/>
		<TextView
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:text="일"
			android:textSize="13dp"
			android:gravity="center"
			android:textColor="#8C8C8C"
			android:layout_marginLeft="20dp"/>
	</LinearLayout>
	<org.androidtown.calendar.month.CalendarMonthView
		android:id="@+id/monthView"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    />

</LinearLayout>
